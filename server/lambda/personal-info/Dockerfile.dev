# Personal Info Service - Development FastAPI Server
# Direct HTTP access without Lambda Runtime Interface Emulator
FROM python:3.12-slim

# Install system dependencies
RUN apt-get update && \
    apt-get install -y gcc python3-dev curl && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Install dependencies from requirements.txt
COPY lambda/personal-info/requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# Install uvicorn for FastAPI server
RUN pip install --no-cache-dir uvicorn[standard]

# Copy shared modules
COPY shared/ ./shared/

# Copy lambda function source code
COPY lambda/personal-info/src/ ./

# Set environment variables
ENV PYTHONPATH="/app:/app/shared:${PYTHONPATH}"
ENV SERVICE_NAME="personal-info"

# Health check for direct FastAPI access
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Labels for identification
LABEL function="personal-info"
LABEL description="Personal information FastAPI service - development mode"
LABEL shared_modules="database,models,repository,config,utils,exceptions"

# Expose port
EXPOSE 8080

# Run FastAPI directly with uvicorn
CMD ["uvicorn", "main:create_app", "--factory", "--host", "0.0.0.0", "--port", "8080", "--reload"]